@model Category

<div class="form-container col-6 offset-3">
    <form method="post" asp-action="Edit">
        <div class="form-group row">
             <h2>Edit category</h2>
        </div>

        <input asp-for="Code" hidden/>

         <label asp-for="Name"></label>
         <input asp-for="Name" />
         <span asp-validation-for="Name" class="error-validation"></span>

         <label asp-for="DisplayOrder"></label>
         <input asp-for="DisplayOrder"/>
         <span asp-validation-for="DisplayOrder" class="error-validation"></span>

         <input type="submit" class="customed-button" value="Update"/>
          <a asp-action="Index">Back</a>
    </form>
</div>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />}
}

