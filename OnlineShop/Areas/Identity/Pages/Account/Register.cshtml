@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@using OnlineShop;

<div class="form-container col-8 offset-2">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        @if (User.IsInRole(@WC.AdminRole))
        {
            <h2>Add admin account</h2>
        }
        else
        {
            <h2>Register</h2>
        }
         <div asp-validation-summary="ModelOnly" class="error-validation"></div>

         <label asp-for="Input.Email"></label>
         <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
         <span asp-validation-for="Input.Email" class="error-validation"></span>

         <label asp-for="Input.FirstName"></label>
         <input asp-for="Input.FirstName" autocomplete="firstname" aria-required="true" />
         <span asp-validation-for="Input.FirstName" class="error-validation"></span>

         <label asp-for="Input.LastName"></label>
         <input asp-for="Input.LastName" autocomplete="lastname" aria-required="true" />
         <span asp-validation-for="Input.LastName" class="error-validation"></span>

         <label asp-for="Input.PhoneNumber"></label>
         <input asp-for="Input.PhoneNumber" autocomplete="phone" aria-required="true" />
         <span asp-validation-for="Input.PhoneNumber" class="error-validation"></span>

         @if (!User.IsInRole(@WC.AdminRole))
        {
            <label asp-for="Input.Address"></label>
            <textarea asp-for="Input.Address" autocomplete="address" aria-required="true"></textarea>
            <span asp-validation-for="Input.Address" class="error-validation"></span>
        }

        <label asp-for="Input.Password"></label>
        <div class="password-input-container">
            <input asp-for="Input.Password" id="new-password" autocomplete="new-password" aria-required="true" />
            <span onclick="showPassword('new-password')"><img src="~/assets/eye.svg" /></span>
        </div>
        <span asp-validation-for="Input.Password" class="error-validation"></span>

        <label asp-for="Input.ConfirmPassword"></label>
        <div class="password-input-container">
            <input asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control" autocomplete="new-password" aria-required="true" />
            <span onclick="showPassword('confirm-password')" ><img src="~/assets/eye.svg" /></span>
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="error-validation"></span>

        <button id="registerSubmit" type="submit" class="customed-button">Register</button>

    </form>
</div>
